{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://webof.uk/schema/ssn/Sensor.json",

  "allOf": [
    { "$ref": "../core/JsonLd.json" },
    { "$ref": "#/definitions/sensorProperties" }
  ],

  "required": [
    "@type"
  ],

  "definitions": {
    "sensorProperties": {
      "$comment": "Property validation is separated, to allow pointers that validate properties where present, but do not enforce the required properties array",
      "properties": {
        "@type": {
          "type": "string",
          "pattern": "^(sosa:)?Sensor$"
        }
      }
    }
  }
}
